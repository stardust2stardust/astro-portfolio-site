---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Jeni Hoyt - Web Developer" description="Front-end developer specializing in accessible, responsive HTML/CSS and inclusive web design">
  <Header />
  
  <main id="main-content">
    <div class="container">
      <section class="hero">
        <h1>Jeni Hoyt</h1>
        <h2>Front-end developer and Acccessibility Advocate
        </h2>
      </section>

      <section class="services">
        <h2>What I do</h2>
        <div class="services-list">
          <article>
            <h3>Web Development</h3>
            <p>Front-end HTML/CSS/JS and custom WordPress solutions with modern, responsive design</p>
          </article>
          <article>
            <h3>Accessibility Testing</h3>
            <p>DHS Trusted Tester certified, focused on building WCAG-compliant experiences</p>
          </article>
          <article>
            <h3>Organization & Documentation</h3>
            <p>Thorough project docs, organized workflows, and timely delivery</p>
          </article>
        </div>
 
      </section>

      <section class="skills">
        <h2>What I Know</h2>
        <ul class="skills-list">
          <li>HTML</li>
          <li>CSS</li>
          <li>JavaScript</li>
          <li>React</li>
          <li>WordPress & PHP</li>
          <li>Accessibility Testing</li>
          <li>Git & Version Control</li>
          <li>Figma & Design Tools</li>
          <li>Responsive Design</li>
          <li>Chrome DevTools</li>

        </ul>
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .container {
    max-inline-size: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing);
  }

  .hero {
    
  }

  .hero h1 {
    font-weight: 400;
    color: var(--color-text-muted);
  }

  .hero h2 {
    color: var(--color-text);
    font-size: 3rem;
  }

  .intro {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  section {
    padding-block: 3rem;
  }

  .services-list {
    list-style: none;
    padding: 0;
    margin-top: 1rem;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    grid-template-rows: repeat(2, auto);
    gap: 1.4rem;
  }

  .services-list article {
    padding: 1.5rem;
    background-color: var(--color-primary);
    color: var(--color-surface);
    border-radius: 10px;
    
    display: grid;
    grid-template-rows: subgrid;
    grid-row: span 2;
    gap: 0.5rem;
  }

  .skills-list {
    /* display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    list-style: none;
    margin-top: 1rem; */
    columns: 3;
    padding-inline-start: 2rem;
  }

  .skills-list li {
    /* padding: 0.75rem 1rem;
    background-color: #f8f8f8;
    border-radius: 4px;
    border: 1px solid var(--color-border); */
  }

  @media (max-width: 768px) {
    .intro {
      font-size: 1.125rem;
    }

    .skills-list {
      grid-template-columns: 1fr;
    }
  }
</style>
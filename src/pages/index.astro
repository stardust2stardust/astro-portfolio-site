---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Jeni Hoyt - Web Developer" description="Front-end developer specializing in accessible, responsive HTML/CSS and inclusive web design">
  <Header />
  
  <main>
    <div class="container">
      <section class="hero">
        <h1>Hi, I'm Jeni</h1>
        <h2>Front-end developer and Acccessibility Advocate
        </h2>
      </section>

      <section class="services">
        <h2>What I do</h2>
        <ul>
          <li>Web Development - Front-end HTML/CSS/JS and custom WordPress solutions with modern, responsive design</li>
          <li>Accessibility Testing - DHS Trusted Tester certified, focused on building WCAG-compliant experiences</li>
          <li>Organization & Documentation - Thorough project docs, organized workflows, and timely delivery</li>
        </ul>
 
      </section>

      <section class="skills">
        <h2>Skills & Technologies</h2>
        <ul class="skills-list">
          <li>HTML</li>
          <li>CSS</li>
          <li>JavaScript</li>
          <li>React</li>
          <li>WordPress & PHP</li>
          <li>Accessibility Testing</li>
          <li>Git & Version Control</li>
          <li>Figma & Design Tools</li>
          <li>Responsive Design</li>
          <li>Chrome DevTools</li>

        </ul>
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .container {
    max-inline-size: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing);
  }

  .hero {
    margin-bottom: 4rem;
  }

  .intro {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 600px;
  }

  section {
    margin-bottom: 3rem;
  }

  .skills-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    list-style: none;
    margin-top: 1rem;
  }

  .skills-list li {
    padding: 0.75rem 1rem;
    background-color: #f8f8f8;
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }

  @media (max-width: 768px) {
    .intro {
      font-size: 1.125rem;
    }

    .skills-list {
      grid-template-columns: 1fr;
    }
  }
</style>
---
// src/pages/projects.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Add your projects here
const projects = [
  {
    title: "Lyrics Finder",
    description: "A web application that allows users to search for song lyrics by artist and title.",
    technologies: ["React", "Tailwind", "API Integration"],
    github: "https://github.com/stardust2stardust/lyrics-app",
    demo: "https://lyrics-app-ivory.vercel.app/"
  },
  {
    title: "Act For Animals Website",
    description: "A website for a non-profit organization providing local information and resources",
    technologies: ["WordPress", "PHP", "CSS", "Elementor Pro", "Figma"],
    demo: "https://actforanimalspgh.org/"
  }
];
---

<Layout title="Projects - Jeni Hoyt" description="Portfolio projects and web development work">
  <Header />
  
  <main id="main-content">
    <div class="container">
      <h1>Projects</h1>
      <p class="intro">
        Here are some of the projects I've worked on. Each one represents a different 
        challenge and learning opportunity.
      </p>

      <div class="projects-grid">
        {projects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing);
  }

  h1 {
    margin-bottom: 1rem;
  }

  .intro {
    color: var(--color-text-muted);
    margin-bottom: 3rem;
    max-width: 600px;
  }

  .projects-grid {
    display: grid;
    gap: 2rem;
  }
</style>
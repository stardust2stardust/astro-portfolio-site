---
// src/layouts/Layout.astro
import '@fontsource/inter/400.css';
import '@fontsource/inter/700.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portfolio of Jennifer Hoyt - Web Developer" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
  /* Primary Colors */
  --color-primary: #1D546D;
  --color-primary-light: #5F9598;
  --color-primary-dark: #0B2A38;
  
  /* Neutrals */
  --color-bg: #ffffff;
  --color-text: #061E29;
  --color-text-muted: #475569;
  --color-border: #e2e8f0;
  --color-surface: #F3F4F4;
  
  /* Accent */
  --color-accent: #831868;
  
  /* Layout */
  --max-width: 55rem;
  --spacing: 1rem;
}

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }


  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;    line-height: 1.6;
    color: var(--color-text);
    background-color: var(--color-bg);
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: var(--color-surface);
    color : var(--color-text);
    font-size: 1.125rem;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 700;
  }

  h1 {
    font-size: 2.625rem;
    margin-bottom: 1rem;
    color: var(--color-primary-dark);
  }

  h2 {
    font-size: 2.375rem;
    margin-bottom: 1rem;
    color: var(--color-accent);
  }

  h3 {
    font-size: 1.625rem;
    margin-bottom: 0.75rem;
  }

  p {
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
    
    h2 {
      font-size: 1.5rem;
    }
  }
</style>